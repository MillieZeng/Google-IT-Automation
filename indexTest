pet = "Car & Dog"
pet.index("o")
pet.index("Dog")
pet.index("&")
"Dragons" in pet
"Cat" in pet

#replace old domain with new domain in email
def replace_domain(email,old_domain,new_domain):
  if "old_domain" in email:
    i = email.index("@"+old_domain)
    new_email = email.index[:i] + "@" + new_domain
    return new_email
  return email
